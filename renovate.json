{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits",
    "helpers:pinGitHubActionDigests"
  ],
  "ignorePaths": [
    "**/testdata/**",
    "**/test/**/*.xml",
    "**/test/**/*.json"
  ],
  "addLabels": ["dependencies"],
  "automergeType": "branch",
  "platformAutomerge": true,
  "gitIgnoredAuthors": ["github-actions[bot] <github-actions[bot]@users.noreply.github.com>"],
  "prConcurrentLimit": 5,
  "prCreation": "not-pending",
  "rangeStrategy": "bump",
  "minimumReleaseAge": "3 days",
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"],
    "automerge": false,
    "minimumReleaseAge": null
  },
  "osvVulnerabilityAlerts": true,
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["\\.github/workflows/.+\\.ya?ml$"],
      "matchStrings": [
        "uses: dtolnay/rust-toolchain@(?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ],
      "depNameTemplate": "rust",
      "packageNameTemplate": "rust-lang/rust",
      "datasourceTemplate": "github-tags",
      "extractVersionTemplate": "^(?<version>\\d+\\.\\d+\\.\\d+)$"
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 6am on monday"],
    "automerge": true,
    "automergeType": "branch",
    "platformAutomerge": true
  },
  "packageRules": [
    {
      "description": "Rust toolchain updates require testing",
      "matchDatasources": ["rust-version", "github-tags"],
      "matchDepNames": ["rust"],
      "enabled": true,
      "automerge": false,
      "groupName": "Rust toolchain",
      "labels": ["dependencies", "rust-toolchain"],
      "minimumReleaseAge": "7 days"
    },
    {
      "description": "Automerge minor Rust toolchain updates after release age",
      "matchDatasources": ["rust-version", "github-tags"],
      "matchDepNames": ["rust"],
      "matchUpdateTypes": ["minor"],
      "automerge": true,
      "groupName": "Rust toolchain",
      "labels": ["dependencies", "rust-toolchain"],
      "minimumReleaseAge": "7 days"
    },
    {
      "description": "Automerge non-major updates after release age",
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "description": "Group all Rust workspace dependencies",
      "matchManagers": ["cargo"],
      "matchDepTypes": ["workspace.dependencies"],
      "groupName": "Rust workspace dependencies"
    },
    {
      "description": "Group Rust dev dependencies",
      "matchManagers": ["cargo"],
      "matchDepTypes": ["dev-dependencies"],
      "groupName": "Rust dev dependencies",
      "automerge": true
    },
    {
      "description": "Security updates have priority and shorter release age",
      "matchDepTypes": ["dependencies"],
      "matchCurrentVersion": "!/^0/",
      "matchUpdateTypes": ["patch"],
      "matchPackagePatterns": ["*"],
      "minimumReleaseAge": "1 day",
      "labels": ["dependencies", "security-patch"]
    },
    {
      "description": "GitHub Actions updates enabled with caution",
      "matchManagers": ["github-actions"],
      "enabled": true,
      "groupName": "GitHub Actions",
      "automerge": false,
      "minimumReleaseAge": "7 days"
    },
    {
      "description": "Major updates require manual review",
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "labels": ["dependencies", "major-update"]
    }
  ]
}
