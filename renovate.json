{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits",
    "helpers:pinGitHubActionDigests"
  ],
  "ignorePaths": [
    "**/testdata/**",
    "**/test/**/*.xml",
    "**/test/**/*.json",
    ".github/workflows/release.yml"
  ],
  "addLabels": ["dependencies"],
  "automergeType": "branch",
  "platformAutomerge": true,
  "gitIgnoredAuthors": ["github-actions[bot] <github-actions[bot]@users.noreply.github.com>"],
  "prConcurrentLimit": 5,
  "prCreation": "not-pending",
  "rangeStrategy": "bump",
  "minimumReleaseAge": "3 days",
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"],
    "automerge": false,
    "minimumReleaseAge": null
  },
  "osvVulnerabilityAlerts": true,
  "cargo": {
    "enabled": true
  },
  "rust": {
    "enabled": true
  },
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update cargo-dist version in dist-workspace.toml",
      "fileMatch": ["^dist-workspace\\.toml$"],
      "matchStrings": [
        "cargo-dist-version\\s*=\\s*\"(?<currentValue>[^\"]+)\""
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "axodotdev/cargo-dist",
      "extractVersionTemplate": "^v(?<version>.+)$"
    }
  ],
  "packageRules": [
    {
      "description": "Rust toolchain updates require testing",
      "matchDatasources": ["rust-version"],
      "enabled": true,
      "automerge": false,
      "labels": ["dependencies", "rust-toolchain"],
      "minimumReleaseAge": "7 days"
    },
    {
      "description": "Automerge non-major updates after release age",
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "description": "Group all Rust workspace dependencies",
      "matchManagers": ["cargo"],
      "matchDepTypes": ["workspace.dependencies"],
      "groupName": "Rust workspace dependencies"
    },
    {
      "description": "Group Rust dev dependencies",
      "matchManagers": ["cargo"],
      "matchDepTypes": ["dev-dependencies"],
      "groupName": "Rust dev dependencies",
      "automerge": true
    },
    {
      "description": "Security updates have priority and shorter release age",
      "matchDepTypes": ["dependencies"],
      "matchCurrentVersion": "!/^0/",
      "matchUpdateTypes": ["patch"],
      "matchPackagePatterns": ["*"],
      "minimumReleaseAge": "1 day",
      "labels": ["dependencies", "security-patch"]
    },
    {
      "description": "GitHub Actions updates enabled with caution",
      "matchManagers": ["github-actions"],
      "enabled": true,
      "groupName": "GitHub Actions",
      "automerge": false,
      "minimumReleaseAge": "7 days"
    },
    {
      "description": "Major updates require manual review",
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "labels": ["dependencies", "major-update"]
    },
    {
      "description": "cargo-dist updates need manual review and regeneration",
      "matchDatasources": ["github-releases"],
      "matchPackageNames": ["axodotdev/cargo-dist"],
      "automerge": false,
      "labels": ["dependencies", "cargo-dist"],
      "minimumReleaseAge": "7 days",
      "prBodyNotes": [
        "⚠️ After updating cargo-dist version, you must run:",
        "```bash",
        "cargo install cargo-dist --version {{{newVersion}}}",
        "cargo dist init",
        "cargo dist generate",
        "```",
        "This will regenerate `.github/workflows/release.yml` with the correct GitHub Actions versions."
      ]
    }
  ]
}
